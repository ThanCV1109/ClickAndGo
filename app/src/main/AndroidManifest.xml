<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.techplus.clickandgo"
    android:versionCode="1"
    android:versionName="0.1.8.11">

    <permission
        android:name="com.techplus.maps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.techplus.maps.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.IntroduceActivity"
            android:label="@string/title_activity_introduce"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".activity.LoginSignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DetailSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DetailLogInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ConfirmEmailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddNewAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ModifyAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SearchAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ModifyPassengerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NewPassengerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ViewMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ViewPricesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".activity.GoNowMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.NewCreditCardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MyAccountActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SubGoNowActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".activity.MyFavoritesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MyTripActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MyCreditCardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="vn.techplus.clickandgo.activity.MainActivity" />
    </application>

</manifest>
