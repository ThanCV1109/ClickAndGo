<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <include
            layout="@layout/map_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8" />

        <Button
            android:id="@+id/btnGoNow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorButton"
            android:text="@string/tv_go_now"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnBookForLate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/common_signin_btn_dark_text_default"
            android:text="@string/btn_book_for_late"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>
