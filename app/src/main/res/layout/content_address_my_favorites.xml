<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_weight="1"
        android:animateLayoutChanges="@bool/default_circle_indicator_centered"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        app:pstsDividerColor="@color/common_signin_btn_dark_text_default"
        app:pstsIndicatorColor="@color/colorButton"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="false"
        app:pstsTextAllCaps="false" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="9"></ListView>

</LinearLayout>
